let raceNumber = Math.floor(Math.random() * 1000);
let early = true;
let age = 15;

 if(age > 18){
   raceNumber += 1000;
 } 
 
 if(age > 18 && early){
   console.log(`Hello Runner! Your number is ${raceNumber}. You will race at 9:30 am.`)
 } else if(age > 18 && !early){
   console.log(`Hello Runner! Your number is ${raceNumber}. You will race at 11:00 am.`)
 }

if(age < 18){
   console.log(`Hello Runner! Your number is ${raceNumber}. You will race at 12:30 am.`)
}
